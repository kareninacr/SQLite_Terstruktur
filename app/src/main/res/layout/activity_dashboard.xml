<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/student"
        android:layout_width="180dp"
        android:layout_height="145dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="115dp"
        android:src="@drawable/student1" />

    <LinearLayout
        android:id="@+id/lihatdata"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@id/student"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="30dp"
        android:background="#C11B17"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logolihat"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_archive_black_24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tvlihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Lihat Data"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="22sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tambahdata"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@id/lihatdata"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="30dp"
        android:background="#1569C7"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logotambah"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_add_box_black_24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tvinput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:text="Input Data"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="22sp"/>
    </LinearLayout>

    <LinearLayout
    android:id="@+id/informasi"
    android:layout_width="250dp"
    android:layout_height="60dp"
    android:layout_below="@id/tambahdata"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="80dp"
    android:layout_marginEnd="80dp"
    android:layout_marginTop="30dp"
    android:background="#C68E17	"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/logoinfo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_info_black_24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/tvinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="12dp"
        android:text="Informasi"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="22sp"/>
</LinearLayout>

</RelativeLayout>